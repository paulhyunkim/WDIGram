<div class="row">
  <div class="col-sm-8 col-sm-offset-2">

<h1>Edit User</h1>
<div class="well bs-component">
<%= form_for @user do |f| %>

<form class="form">
  <fieldset>
    <div class="form-group">
      <label for="inputName" class="col-lg-2 control-label">Name</label>
      <div class="col-lg-10">

        <%= f.text_field :firstName, class: "form-control", placeholder: "First Name" %>
        <%= f.text_field :lastName, class: "form-control", placeholder: "Last Name" %>
      </div>
    </div>

    <div class="form-group">
      <label for="inputEmail" class="col-lg-2 control-label">Email</label>
      <div class="col-lg-10">
        <%= f.text_field :email, class: "form-control", placeholder: "Email Address" %>
      </div>
    </div>

    <div class="form-group">
      <label for="inputPassword" class="col-lg-2 control-label">Password</label>
      <div class="col-lg-10">

        <%= f.password_field :password, class: "form-control", placeholder: "Password (at least 6 characters)" %>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
      </div>
    </div>
    
    <div class="form-group">
      <label for="inputPicture" class="col-lg-2 control-label">Photo</label>
      <div class="col-lg-10">
        <%= f.file_field :picture, class: "form-control", placeholder: "Profile Picture" %>
      </div>
    </div>

     
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= link_to "Cancel", root_path, class: "btn btn-default" %>
        <%= f.submit class: "btn btn-primary btn-default", value: "Submit"%> 
      </div>
    </div>
  </fieldset>
</form>
<% end %>
</div>


  </div>
</div>





