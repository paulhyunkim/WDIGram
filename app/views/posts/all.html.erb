<% @posts.each do |p| %>
	<div class="row post">

		<!-- comments -->
		<div class="col-md-5 comments-column hidden-sm hidden-xs">
		  <% p.comments.each do |c| %>
		  	<div class="comment">
		  	<%= '"' + c.content + '"' %> -<%= c.user.firstName %> <%= image_tag c.user.picture.url(:small), class: "img-circle", width: 40 %>
		  	</div>
			<% end %>
			<div><%= link_to "Leave comment", new_post_comment_path(p) %></div>
	  </div>

		<!-- photos -->
		<div class="col-md-7 photo-column">
			<%= image_tag p.picture.url(:large), class: "img-responsive img-rounded" %>
			<%= p.caption %>
			<strong>Tags:</strong>
		  <%= p.tags %><br>
		  Posted by <%= link_to p.user.firstName + " " + p.user.lastName, current_user %>

		  <%= distance_of_time_in_words_to_now(p.created_at) + " ago" %>
		  <%= link_to "Edit", p %>
	  </div>
	
	  
  </div>
<% end %>


	  


