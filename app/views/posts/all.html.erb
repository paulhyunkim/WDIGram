<% @posts.each do |p| %>
	<div class="row post">

		

		<!-- photos -->
		<div class="col-sm-7 col-sm-push-5 photo-column">
			<%= image_tag p.picture.url(:large), class: "img-responsive img-rounded" %>
			
			<div class="post-details">
			<%= link_to "Leave comment", new_post_comment_path(p), class: "btn btn-success", type: "button" %>
			 <br>
				<%= p.caption %>
				<strong>Tags:</strong>
			  <%= p.tags %><br>
			  Posted by <%= link_to p.user.firstName + " " + p.user.lastName, current_user %>

			  <%= distance_of_time_in_words_to_now(p.created_at) + " ago" %>
			  <%= link_to "Edit", p %>
				
			</div>
	  </div>
	
		<!-- comments -->
		<% if p.comments.count != 0 %>
			<div class="col-sm-5 col-sm-pull-7 comments-column well">

			  <% p.comments.each do |c| %>
			  	<div class="comment">
			  	<%= '"' + c.content + '"' %> <%= c.user.firstName + " " + c.user.lastName %> <%= image_tag c.user.picture.url(:small), class: "img-circle hidden-sm hidden-xs", width: 40 %>
			  	</div>
				<% end %>
				<div></div>
		  </div>
	  <% else %>
	  	<div class="col-sm-5 col-sm-pull-7 comments-column"></div>
  	<% end %>

	  
  </div>
<% end %>


	  


